<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Styles/JS/jquery.js"></script>
    <script src="~/Styles/JS/uikit.js"></script>
    <link href="~/Styles/uikit.almost-flat.css" rel="stylesheet" />
    <title>MySoccer</title>
</head>
<body class="uk-height-1-1">
    <div class="uk-width-1-3 uk-push-1-3">
        <br />
        <h1>#tipodeusuario</h1>
        <br />
        <form class="uk-form uk-form-horizontal" id="form1" method="get" action="#">
            <div class="uk-form-row">
                <label class="uk-form-label">Tipo de usuario</label>
                <div class="uk-form-controls">
                    <div class="uk-button-dropdown" data-uk-dropdown>
                        <button class="uk-button">seleccione uno&nbsp<i class="uk-icon-caret-down"></i></button>
                        <div class="uk-dropdown">
                            <ul class="uk-nav uk-nav-dropdown">
                                <li><a href="@Url.Action("Administrador_Registro")">administrador</a></li>
                                <li><a href="@Url.Action("Narrador_Registro")">narrador</a></li>
                                <li><a href="@Url.Action("Fanatico_Registro")">fanático</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <br /> <br />
            <div class="uk-form-row">
                <label class="uk-form-label">Nombre de usuario</label>
                <div class="uk-form-controls">
                    <input class="uk-form-width-medium" type="text" name="name" value=" " />
                </div>
            </div>
            <div class="uk-form-row">
                <label class="uk-form-label">Contraseña</label>
                <div class="uk-form-controls">
                    <input class="uk-form-width-medium" type="password" name="name" value="" />
                </div>
            </div>
            <h3>Información personal</h3>
            <div>
                @RenderBody()
            </div>
            <div class="uk-form-horizontal">
                <br />
                <div class="uk-grid">
                    <div class="uk-width-1-3 uk-push-1-3 uk-text-right">
                        <a class="uk-button uk-button-primary uk-text-break"><i class="uk-icon-check">&nbsp</i>Hecho</a>
                    </div>
                    <div class="uk-width-1-3 uk-push-1-3">
                        <a class="uk-button uk-button-primary uk-text-break" href="@Url.Action("Index")"><i class="uk-icon-times">&nbsp</i>Cancelar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <br />
</body>
</html>
