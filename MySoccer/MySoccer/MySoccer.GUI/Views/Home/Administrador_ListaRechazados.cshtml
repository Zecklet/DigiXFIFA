@{
    ViewBag.Title = "Administrador_ListaRechazados";
    Layout = "~/Views/Layouts/_Administrador.cshtml";
}

<div class="uk-width-8-10 uk-push-2-10">
    <h1>Administrar lista de rechazados</h1>
    <h3>Ingresar rechazado</h3>
    <form class="uk-form uk-form-horizontal" action="#" method="post">
        <div class="uk-form-row">
            <label class="uk-form-label">Nombre</label>
            <div class="uk-form-controls"> <input class="uk-form-width-medium" type="text" name="name" value=" " /> </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label">Pasaporte</label>
            <div class="uk-form-controls"> <input class="uk-form-width-medium" type="text" name="name" value=" " /> </div>
        </div>
        <div class="uk-form-row uk-width-1-5 uk-push-3-5">
            <button class="uk-button uk-button-primary"><i class="uk-icon-plus">&nbsp</i>Agregar</button>
        </div>
    </form>

    <h3>Lista de rechazados</h3>
    <table class="uk-table">
        <tr>
            <th>Nombre del fanático</th>
            <th>Pasaporte</th>
            <th>Intentos de ingreso</th>
        </tr>
    </table>
    <br />
    <form class="uk-form uk-form-horizontal" action="#" method="post">
        <div class="uk-form-row uk-width-1-5 uk-push-3-5">
            <button class="uk-button uk-button-primary"><i class="uk-icon-minus">&nbsp</i>Eliminar</button>
        </div>
    </form>
</div>
