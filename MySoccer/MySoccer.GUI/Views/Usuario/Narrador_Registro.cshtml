@model MySoccer.EjeTransversal.GestionarUsuarios.guiModeloNarrador
@{
    ViewBag.Title = @Model.cNombrePagina;
    Layout = "~/Views/Layouts/" + @Model.cNombreLayout + ".cshtml";
}

<div class="uk-form-row">
    <label class="uk-form-label">Nombre</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => model.cNombre, Model.cNombre, new {@maxlength = "30", @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cNombre)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Apellido</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => model.cApellido, Model.cApellido, new {@maxlength = "30", @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cApellido)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Fecha de nacimiento</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => Model.cFechaNacimiento, Model.cFechaNacimiento, new { id = "datetimepicker_mask", @readonly = "true", @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cFechaNacimiento)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Género</label>
    <div class="uk-form-controls">
        @Html.DropDownListFor(model => Model.cGenero, new SelectList(Model.GetGeneros(), "Key", "Value"), new { @class = "uk-form-width-medium" })
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Años de experiencia</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => model.cAnosExperiencia, Model.cAnosExperiencia, new { type = "number", min = "0", @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cAnosExperiencia)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Descripción personal</label>
    <div class="uk-form-controls uk-form-width-medium">
        @Html.TextAreaFor(model => Model.cDescripcion, new { @maxlength = "300", @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cDescripcion)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Foto</label>
    @Html.TextBoxFor(model => model.cImagen, new { type = "file", accept = "image/*"})
</div>