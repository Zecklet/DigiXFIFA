@model MySoccer.Presentacion.GestionarUsuarios.guiModeloFanatico

@{
    ViewBag.Title = @Model.cNombrePagina;
    Layout = "~/Views/Layouts/" + @Model.cNombreLayout + ".cshtml";
}


<div class="uk-form-row">
    <label class="uk-form-label">Nombre</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => model.cNombre, Model.cNombre, new { @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cNombre)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Apellido</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => model.cApellido, Model.cApellido, new { @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cApellido)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">País</label>
    <div class="uk-form-controls">
        @{
            if (Model.cPaises != null)
            {
                Html.ViewData["cPaises"] = Model.cPaises;
            }
        }

        @Html.DropDownListFor(model => Model.cPais, new SelectList(Model.cPaises, "Key", "Value"), new { @class = "uk-form-width-medium" })
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Fecha de nacimiento</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => model.cFechaNacimiento, Model.cFechaNacimiento, new { id = "datetimepicker_mask", @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cFechaNacimiento)

    </div>
</div>

<div class="uk-form-row">
    <label class="uk-form-label">Correo electrónico</label>
    <div class="uk-form-controls">
        @Html.TextBoxFor(model => model.cCorreoElectronico, Model.cCorreoElectronico, new { @class = "uk-form-width-medium" })
        @Html.ValidationMessageFor(model => Model.cCorreoElectronico)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Género</label>
    <div class="uk-form-controls">
        @Html.DropDownListFor(model => Model.cGenero, new SelectList(Model.GetGeneros(), "Key", "Value"), new { @class = "uk-form-width-medium" })
    </div>
</div>


<div class="uk-form-row">
    <label class="uk-form-label">Equipo favorito</label>
    <div class="uk-form-controls">
        @Html.DropDownListFor(model => Model.cEquipo, (new SelectList(Model.cEquipos, "Key", "Value", 4)), new { @class = "uk-form-width-medium" })
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Descripción personal</label>
    <div class="uk-form-controls uk-form-width-medium">
        @Html.TextAreaFor(model => model.cDescripcion, Model.cDescripcion)
        @Html.ValidationMessageFor(model => Model.cDescripcion)
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Foto</label>
    @Html.TextBoxFor(model => Model.cImagen, new { type = "file", accept = "image/*" })
</div>
