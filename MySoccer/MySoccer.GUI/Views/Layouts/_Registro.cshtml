@model MySoccer.EjeTransversal.GestionarUsuarios.guiModeloUsuario

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/Styles/JS/jquery.js"></script>
    <script type="text/javascript" src="~/Styles/JS/uikit.js"></script>
    <link href="~/Styles/uikit.almost-flat.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/JavaScript/jquery.datetimepicker.css" />
    <script type="text/javascript" src="~/JavaScript/jquery.datetimepicker.js"></script>
    <script type="text/javascript" src="~/JavaScript/calendario.js"></script>


    <title>MySoccer</title>
</head>
<body class="uk-height-1-1">
    <div class="uk-width-1-3 uk-push-1-3">
        <br />
        <h1>@Html.LabelFor(model => Model.cNombreSeccion, Model.cNombreSeccion)</h1>
        <br />
        <form class="uk-form uk-form-horizontal" id="form1" method="get" action="#">
            <div class="uk-form-row">
                <label class="uk-form-label">Tipo de usuario</label>
                <div class="uk-form-controls">
                    <div class="uk-button-dropdown" data-uk-dropdown>
                        <button class="uk-button">seleccione uno&nbsp<i class="uk-icon-caret-down"></i></button>
                        <div class="uk-dropdown">
                            <ul class="uk-nav uk-nav-dropdown">
                                <li><a href="@Url.Action("Administrador_Registro")">administrador</a></li>
                                <li><a href="@Url.Action("Narrador_Registro")">narrador</a></li>
                                <li><a href="@Url.Action("Fanatico_Registro")">fanático</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <br />
        <font class="uk-form uk-form-horizontal" color=" red">@Html.ValidationMessage("error") </font>

        <br />
        @using (Html.BeginForm(@Model.cAccion, "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => Model.cNombreSeccion, Model.cNombreSeccion)
            @Html.HiddenFor(model => Model.cNombreLayout, Model.cNombreLayout)
            @Html.HiddenFor(model => Model.cNombrePagina, Model.cNombrePagina)
            <div class="uk-form-row">
                <label class="uk-form-label">Nombre de usuario</label>
                <div class="uk-form-controls">
                    @Html.TextBoxFor(model => model.cNombreUsuario, Model.cNombreUsuario, new {@maxlength = "30", @class = "uk-form-width-medium" })
                    @Html.ValidationMessageFor(model => Model.cNombreUsuario)
                </div>
            </div>
            <div class="uk-form-row">
                <label class="uk-form-label">Contraseña</label>
                <div class="uk-form-controls">
                    @Html.PasswordFor(model => model.cContrasena, new { @maxlength = "8", @class = "uk-form-width-medium" })
                    @Html.ValidationMessageFor(model => Model.cContrasena)
                </div>
            </div>
            <h3>Información personal</h3>
            <div>
                @RenderBody()
            </div>
            <div class="uk-form-horizontal">
                <br />
                <div class="uk-grid">
                    <div class="uk-width-1-3 uk-push-1-3 uk-text-right">
                        <input class="uk-button uk-button-primary uk-text-break" type="submit" value="Hecho">
                    </div>
                    <div class="uk-width-1-3 uk-push-1-3">
                        <a class="uk-button uk-button-primary uk-text-break" href="@Url.Action("Index","Home")"><i class="uk-icon-times">&nbsp</i>Cancelar</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <br />
</body>
</html>
