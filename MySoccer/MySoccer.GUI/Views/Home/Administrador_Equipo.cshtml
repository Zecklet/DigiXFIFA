@{
    ViewBag.Title = "Administrador_Equipo";
    Layout = "~/Views/Layouts/_Administrador.cshtml";
}

<div class="uk-width-9-10 uk-push-1-10">
    <h1>Agregar equipo</h1>
    <div class="uk-width-1-4">
        <div class="uk-button-dropdown" data-uk-dropdown>
            <button class="uk-button uk-button-large uk-button-primary">#equipo&nbsp<i class="uk-icon-caret-down"></i></button>
            <div class="uk-dropdown">
                <ul class="uk-nav uk-nav-dropdown"></ul>
            </div>
        </div>
    </div>
    <br />
    <h3>Información del equipo</h3>
    <form class="uk-form uk-form-horizontal" action="#" method="post">
        <div class="uk-form-row">
            <label class="uk-form-label">Nombre de la federación</label>
            <div class="uk-form-controls">
                <input class="uk-form-width-medium" type="text" name="name" value=" " />
            </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label">Fecha de asociación a la X-FIFA</label>
            <div class="uk-form-controls">
                <input class="uk-form-width-medium" type="date" name="name" value=" " />
            </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label">Foto</label>
            <div class="uk-form-controls uk-form-width-medium">
                <input type="file" name="name" value=" " />
            </div>
        </div>
    </form>
    <br />
    <h3>Jugadores que pertenecen al equipo</h3>
    <table class="uk-table">
        <tr>
            <th></th>
            <th>Pasaporte X-FIFA</th>
            <th>Nombre del jugador</th>
            <th>Nacionalidad</th>
        </tr>
    </table>
    <br />
    <a class="uk-button uk-button-primary uk-text-break uk-align-medium-right" href="@Url.Action("Administrador_Torneo")"><i class="uk-icon-times">&nbsp</i>Cancelar</a>
    <a class="uk-button uk-button-primary uk-text-break uk-align-medium-right" href="#"><i class="uk-icon-check">&nbsp</i>Completar registro</a>
</div>
