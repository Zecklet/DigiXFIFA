@{
    ViewBag.Title = "Narrador_Partido";
    Layout = "~/Views/Layouts/_Narrador.cshtml";
}

<div class="uk-width-9-10 uk-container-center">
    <div class="uk-grid">
        <div class="uk-width-1-3">
            <h2>Fanáticos</h2>
            <dl class="uk-description-list uk-description-list-line">
                <dt>#nombredeusuario</dt>
                <dd>#comentario</dd>
                <dt>#nombredeusuario</dt>
                <dd>#comentario</dd>
            </dl>
        </div>
        <div class="uk-width-2-3">
            <a class="uk-button uk-button-primary uk-form-width-mini uk-align-right" href="#"><i class="uk-icon-times">&nbsp</i>Cerrar partido</a>
            <h2>Minuto a minuto</h2>
            <ul class="uk-subnav uk-subnav-pill uk-align-center" data-uk-switcher="{connect:'#comentario'}">
                <li class="uk-active"><a href="#">Estadístico</a></li>
                <li><a href="#">Comentario</a></li>
            </ul>
            <ul id="comentario" class="uk-switcher">
                <li class="uk-active">
                    <div class="uk-width-1-1">
                        <form class="uk-form-stacked" action="/" method="post">
                            <div class="uk-form-row">
                                <div class="uk-form-controls uk-form-controls-text">
                                    <p class="uk-form-controls-condensed">
                                        <label>Tiempo</label> <input class="uk-form-width-small" type="text" /> &nbsp
                                        <label>Acción</label>
                                        <select>
                                            <option>#acciones</option>
                                        </select>
                                    </p>
                                    <p class="uk-form-controls-condensed">
                                        <select>
                                            <option>#equipo</option>
                                        </select>  &nbsp
                                        <select>
                                            <option>#jugador1</option>
                                        </select>  &nbsp
                                        <select>
                                            <option>#jugador2</option>
                                        </select> &nbsp
                                    </p>
                                    <p class="uk-align-right">
                                        <input type="checkbox" /><label>Postear en twitter</label> &nbsp
                                        <a class="uk-button uk-button-primary uk-form-width-mini" href="#"><i class="uk-icon-times">&nbsp</i>Hecho</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
                <li>
                    <div class="uk-width-1-1">
                        <form class="uk-form-stacked" action="#" method="post">
                            <div class="uk-form-row">
                                <div class="uk-form-controls uk-form-controls-text">
                                    <p class="uk-form-controls-condensed">
                                        <textarea class="uk-width-1-1" rows="3"></textarea>
                                    </p>
                                    <p class="uk-align-right">
                                        <input type="checkbox" /> <label>Postear en twitter</label> &nbsp
                                        <a class="uk-button uk-button-primary uk-form-width-mini"><i class="uk-icon-times">&nbsp</i>Hecho</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
            <br />
            <div class="uk-scrollable-box">
                <div class="uk-panel-box uk-width-1-1">
                    <button class="uk-button uk-button-mini uk-align-right"><i class="uk-icon-times"></i></button>
                    <br />
                    <label>#comentario</label>
                </div>
                <br />
            </div> <br />
            <div class="uk-grid">
                <div class="uk-width-1-2">
                    <ul class="uk-subnav uk-subnav-pill uk-align-center" data-uk-switcher="{connect:'#equipo1'}">
                        <li class="uk-active"><a href="#">Titulares</a></li>
                        <li><a href="#">Reserva</a></li>
                    </ul>
                    <ul id="equipo1" class="uk-switcher">
                        <li class="uk-active">
                            <div class="uk-scrollable-box">
                                <ul class="uk-list uk-list-striped">
                                    <li><a href="@Url.Action("Narrador_Jugador")">#jugador 1</a></li>
                                    <li>#jugador 2</li>
                                </ul>
                            </div>
                        </li>
                        <li class="uk-active">
                            <div class="uk-scrollable-box">
                                <ul class="uk-list uk-list-striped">
                                    <li>#jugador 1</li>
                                    <li>#jugador 2</li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="uk-width-1-2">
                    <ul class="uk-subnav uk-subnav-pill uk-align-center" data-uk-switcher="{connect:'#equipo2'}">
                        <li class="uk-active"><a href="#">Titulares</a></li>
                        <li><a href="#">Reserva</a></li>
                    </ul>
                    <ul id="equipo2" class="uk-switcher">
                        <li class="uk-active">
                            <div class="uk-scrollable-box">
                                <ul class="uk-list uk-list-striped">
                                    <li>#jugador 1</li>
                                    <li>#jugador 2</li>
                                </ul>
                            </div>
                        </li>
                        <li class="uk-active">
                            <div class="uk-scrollable-box">
                                <ul class="uk-list uk-list-striped">
                                    <li>#jugador 1</li>
                                    <li>#jugador 2</li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>