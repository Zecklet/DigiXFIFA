@{
    ViewBag.Title = "Fanatico_Registro";
    Layout = "~/Views/Layouts/_Registro.cshtml";
}

<div class="uk-form-row">
    <label class="uk-form-label">Género</label>
    <div class="uk-form-controls">
        <select>
            <option value="value">Masculino</option>
            <option value="value">Femenino</option>
        </select>
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Nombre</label>
    <div class="uk-form-controls">
        <input class="uk-form-width-medium" type="text" name="name" value=" " />
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Apellido</label>
    <div class="uk-form-controls">
        <input class="uk-form-width-medium" type="text" name="name" value=" " />
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">País</label>
    <div class="uk-form-controls">
        <select>
            <option value="value">#pais</option>
        </select>
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Fecha de nacimiento</label>
    <div class="uk-form-controls">
        <input class="uk-form-width-medium" type="date" name="name" value=" " />
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Correo electrónico</label>
    <div class="uk-form-controls">
        <input class="uk-form-width-medium" type="text" name="name" value=" " />
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Equipo favorito</label>
    <div class="uk-form-controls">
        <select>
            <option value="value">#equipofavorito</option>
        </select>
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Descripción personal</label>
    <div class="uk-form-controls uk-form-width-medium">
        <textarea class="uk-width-1-1" rows="3">content</textarea>
    </div>
</div>
<div class="uk-form-row">
    <label class="uk-form-label">Foto</label>
    <div class="uk-form-controls uk-form-width-medium">
        <input type="file" name="name" value=" " />
    </div>
</div>
