<!DOCTYPE html>

<html class="uk-height-1-1">
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Styles/JS/jquery.js"></script>
    <script src="~/Styles/JS/uikit.js"></script>
    <link href="~/Styles/uikit.almost-flat.css" rel="stylesheet" />
    <title>MySoccer</title>
</head>
<body class="uk-height-1-1">
    <div class="uk-width-9-10 uk-height-1-1 uk-container-center">
        <div class="uk-grid">
            <br />
            <div class="uk-width-3-6">
                <i class="uk-icon-user uk-icon-large">&nbsp</i><a href="@Url.Action("Administrador_Perfil")" class="uk-link"> #nombredeusuario </a>
            </div>
            <div class="uk-width-1-6 uk-push-2-6">
                <a href="@Url.Action("Index")" class="uk-link"> Cerrar sesión </a>
            </div>
        </div>
        <hr class="uk-grid-divider" />
        <div class="uk-grid uk-container-center">
            <div class="uk-width-2-10 uk-grid-divider">
                <a class="uk-button uk-button-primary uk-width-1-1 uk-button-large uk-text-break" href="@Url.Action("Administrador_ListaRechazados")">Administrar lista de rechazados</a>
                <br /> <br />
                <a class="uk-button uk-button-primary uk-width-1-1 uk-button-large uk-text-break" href="@Url.Action("Administrador_Calendario")">Gestionar calendario</a>
                <br /> <br />
                <a class="uk-button uk-button-primary uk-width-1-1 uk-button-large uk-text-break" href="@Url.Action("Administrador_Torneo")">Gestionar torneo</a>
                <br /> <br />
            </div>
            <div class="uk-width-8-10">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
